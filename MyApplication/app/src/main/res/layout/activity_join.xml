<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#1bbc9b"
    tools:context="com.example.park.myapplication.Join">

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <TextView
            android:text="아이디"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textColor="#FFFFFF"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textPersonName"
                android:hint="guest"
                android:ems="10"
                android:id="@+id/editMid" />

            <Button
                android:text="중복체크"
                android:layout_width="0dp"
                android:background="#FFFFFF"
                android:textColor="#1bbc9b"
                android:layout_height="wrap_content"
                android:id="@+id/btnMidCheck"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:text="비밀번호"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:inputType="textPassword"
            android:hint="******"
            android:ems="10"
            android:id="@+id/editMpassword" />

        <TextView
            android:text="이름"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textColor="#FFFFFF"
             />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:inputType="textPersonName"
            android:hint="홍길동"
            android:ems="10"
            android:id="@+id/editMname" />

        <TextView
            android:text="휴대폰 번호"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textColor="#FFFFFF"
            android:id="@+id/textView4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:gravity="center"
                android:hint="010-1234-1234"
                android:ems="10"
                android:layout_weight="2"
                android:id="@+id/editMphone" />

            <Button
                android:text="인증"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="#FFFFFF"
                android:textColor="#1bbc9b"
                android:layout_height="wrap_content"
                android:id="@+id/btnPIN"
                android:layout_weight="0.6" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:inputType="phone"
                android:gravity="center"
                android:hint="123456"
                android:ems="10"
                android:id="@+id/editPINNum" />

        </LinearLayout>

        <TextView
            android:text="생년월일"
            android:textColor="#FFFFFF"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.5">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/spinneryear" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/spinnermonth" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/spinnerday" />
        </LinearLayout>

        <TextView
            android:text="관심지역"
            android:textColor="#FFFFFF"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnspinner1"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnspinner2"
                android:layout_weight="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="확인"
                android:background="#FFFFFF"
                android:textColor="#1bbc9b"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnpw1" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>
